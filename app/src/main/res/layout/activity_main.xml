<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Wifi_enable"
        android:layout_width="194dp"
        android:layout_height="172dp"
        android:background="@drawable/ic_signal_wifi_4_bar_black_24dp"
        android:onClick="wifi_enable"
        android:text="Enable" />


    <Button
        android:id="@+id/wifi_disable"
        android:layout_width="200dp"
        android:layout_height="183dp"
        android:background="@drawable/ic_signal_wifi_off_black_24dp"
        android:onClick="wifi_disable"
        android:text="Disable" />


</LinearLayout>